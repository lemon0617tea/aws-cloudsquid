<body>
  
<div class="all_ph">
  <div class="openrec_index_t">
  <h1>OPENREC.tv</h1>
  </div>
  <div class="openrec_index">
  <% @openrecs.each do |openrec| %>
    <div class="openrec_index01">
      <!---->
      <div class="openrec_index02">
      <iframe width="100%" height="240" src="https://www.openrec.tv/live/<%=openrec.openrec_url%>" frameborder="0" allow="picture-in-picture" ></iframe>
        <div class="openrec_index_ph_top">
          <div class="openrec_index_log">
          <%= image_tag 'openrec.png', class: "openrec_ph_log" %>
          </div>
          <div class="openrec_index_ph_url">
          <a href="https://www.openrec.tv/live/<%=openrec.openrec_url%>">https://www.openrec.tv/live/<%=openrec.openrec_url%></a>
          </div>
        </div>
      </div>
      <!---->
      <div class="openrec_index03">
        <!---->
        <div class="openrec_index04">
        <%= attachment_image_tag openrec.user, :profile_image, fallback: "no-image.png", class: "profile_image_ph" %>
        </div> 
        <!---->
        <div class="openrec_index05">
          <!---->
          <div class="openrec_index06">
          <%= openrec.body %>
          </div>
          <!---->
          <div class="openrec_index07">
          <i class="fas fa-crown"></i><%= link_to openrec.user.username, user_path(openrec.user), class: "post_username" %>
          </div>
          <!---->
        </div> 
        <!---->
      </div>  
      <div class="openrec_index08">
      <%= link_to '詳細へ >', openrec, class: "openrec_text" %>  
      </div>
      <!---->
    </div>  
  <% end %>
  </div>
  <!--new_btn-->
  <div class="fixed_btn">
    <%= link_to new_openrec_path, class: "new_btn" do %>
    <i class="fas fa-paper-plane"></i>
    <% end %>
  </div>

  <footer>
    <div class="footer01">
    <p id="page-top"><a href="#">↑</a></p>
    </div>
    <div class="footer02">
      <div class="h3">
        <p></p>
      </div>
      <div class="footer03">
      <a href="#" class="btn-social-long-twitter">
        <i class="fab fa-twitter"></i> <span>Follow Me</span>
      </a>
      </div>
    </div>
    <div class="Copyright">
      <small>Copyright &copy; 2021 CloudSquid Co.,Ltd.</small>
    </div>
  </footer>

</div>

