                <div class="users_show_plays04 container">
                <%= link_to edit_play_path(play), class: "users_text_show" do %>
                編集する
                <% end %>
                </div>
                <!---->
                <div class="users_show_plays05 container">
                <%= link_to play_path(play), method: :delete, data: {confirm: "削除しますか？"}, class: "users_text_show" do %>
                削除する
                <% end %>
                </div>
                <!---->
            <% end %>
            <!---->
        </div>
        <!---->
        <div class="users_show_plays06">
        <%= play.updated_at.strftime("%Y-%m-%d %H:%M") %></time>更新
        </div>
        <!---->
    <% end %>
    </div>
